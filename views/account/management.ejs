<h1><%= title %></h1>
<h2>Welcome, <%= accountData.account_firstname %> <%= accountData.account_lastname %>!</h2>

<div class="accountLink">
  <p><a href="/account/update/<%= accountId %>">Update Account Information</a></p>
  <p><a href="/account/logout">Logout</a></p>
</div>

<% if (accountType === "Employee" || accountType === "Admin") { %>
  <h3>Inventory Management</h3>
  <div class="accountLink">
    <p><a href="/inv/">Manage Inventory</a></p>
  </div>
<% } %>

<% if (Array.isArray(errors) && errors.length > 0) { %>
  <div class="error-messages">
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg || error %></li> 
      <% }) %>
    </ul>
  </div>
<% } %>

<% if (typeof message !== 'undefined') { %>
  <div class="flash-message"><%= message %></div> 
  <p>You're logged in!</p>
<% } %>
