<h1><%= title %></h1>

<% if (Array.isArray(errors) && errors.length > 0) { %>
  <div class="error-messages">
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg || error %></li> 
      <% }) %>
    </ul>
  </div>
<% } %>


<form id="registerForm" action="/account/register" method="post" class="register-card">
  <label for="first-name">First name:</label>
  <input type="text" id="first-name" name="account_firstname" required>

  <label for="last-name">Last name:</label>
  <input type="text" id="last-name" name="account_lastname" required>

  <label for="email">Email:</label>
  <input type="email" id="email" name="account_email" required>

  <label for="password">Password:</label>
  <input 
     type="password"
     id="password" 
     name="account_password" 
     required
     minlength="12"
     pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+{}\[\]:;<>,.?~\\/-]).{12,}$"
     title="Password must be at least 12 characters long, include at least one uppercase letter, one number, and one special character.">
  <button type="submit">Register</button>
</form>


