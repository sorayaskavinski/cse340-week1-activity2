<!-- views/account/login.ejs -->
<h1><%= title %></h1>

<% if (Array.isArray(errors) && errors.length > 0) { %>
  <div class="error-messages">
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg || error %></li> 
      <% }) %>
    </ul>
  </div>
<% } %>


<% if (typeof message !== 'undefined') { %>
  <div class="flash-message"><%= message %></div> 
<% } %>

<form id="loginForm" action="/account/login" method="post" class="form-card">
  <label for="email">Email:</label>
  <input type="email" id="email" name="account_email" required>

  <label for="password">Password:</label>
  <input type="password" id="password" name="account_password" required>

  <button type="submit">Login</button>
</form>

<p>
  Don't have an account? <a href="/account/register" class="register-link">Register here</a>.
</p>
