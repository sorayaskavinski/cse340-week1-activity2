<%- include('../partials/navigation') %>

<main>
  <h1>Add Inventory</h1>

  <% if (message) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <div class="form-card"> 
    <p>Fill in the details below to add a new vehicle to the inventory.</p>
    <form action="/inv/add-inventory" method="post" id="addInventoryForm">
        <label for="make">Make</label>
        <input type="text" id="make" name="inv_make" value="<%= inv?.inv_make || '' %>" required>

        <label for="model">Model</label>
        <input type="text" id="model" name="inv_model" value="<%= inv?.inv_model || '' %>" required>

        <label for="description">Description</label>
        <textarea id="description" name="inv_description" required><%= inv?.inv_description || '' %></textarea>

        <label for="image">Image Path</label>
        <input type="text" id="image" name="inv_image" value="<%= inv?.inv_image || '/images/vehicles/no-image.png' %>" required>

        <label for="thumbnail">Thumbnail Path</label>
        <input type="text" id="thumbnail" name="inv_thumbnail" value="<%= inv?.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>" required>

        <label for="price">Price</label>
        <input type="number" id="price" name="inv_price" value="<%= inv?.inv_price || '' %>" required>

        <label for="year">Year</label>
        <input type="number" id="year" name="inv_year" value="<%= inv?.inv_year || '' %>" required>

        <label for="miles">Miles</label>
        <input type="number" id="miles" name="inv_miles" value="<%= inv?.inv_miles || '' %>" required>

        <label for="color">Color</label>
        <input type="text" id="color" name="inv_color" value="<%= inv?.inv_color || '' %>" required>

        <label for="classificationList">Classification</label>
        <%- classificationList %>

        <button type="submit">Add Vehicle</button>
     </form>
    </div>
</main>
